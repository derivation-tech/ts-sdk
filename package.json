{
    "name": "@synfutures/ts-sdk",
    "private": true,
    "version": "0.0.1",
    "description": "SynFutures TypeScript SDK monorepo",
    "author": "SynFutures",
    "license": "MIT",
    "scripts": {
        "preinstall": "node scripts/ensure-pnpm.cjs",
        "nx": "nx run-many --target=build --all",
        "test": "nx run-many --target=test --all",
        "deps": "pnpm -r i",
        "prepare": "husky",
        "lint": "eslint",
        "format": "prettier --write packages/**/*.ts apps/**/*.ts",
        "clean": "pnpm -r clean"
    },
    "devDependencies": {
        "@changesets/cli": "^2.28.1",
        "@eslint/js": "^9.9.1",
        "@nx/eslint": "20.0.6",
        "@nx/jest": "20.0.6",
        "@types/jest": "^29.5.12",
        "eslint": "^9.7.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "nx": "20.0.6",
        "prettier": "^3.3.3",
        "ts-jest": "^29.2.2",
        "typescript": "^5.5.3",
        "typescript-eslint": "^8.3.0"
    },
    "jest": {
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "moduleNameMapper": {
            "^~/(.*)$": "<rootDir>/$1"
        },
        "rootDir": "src",
        "testEnvironment": "node",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=8"
    },
    "pnpm": {
        "peerDependencyRules": {
            "allowedVersions": {
                "eslint": "^9.2.0"
            }
        }
    }
}
