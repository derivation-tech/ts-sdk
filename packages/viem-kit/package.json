{
    "name": "@derivation-tech/viem-kit",
    "version": "0.2.1",
    "description": "Viem-based web3 kit with address book, contract parsers, and tx handling",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs",
            "default": "./dist/index.mjs"
        },
        "./abis": {
            "types": "./dist/abis/index.d.ts",
            "require": "./dist/abis/index.cjs",
            "import": "./dist/abis/index.mjs",
            "default": "./dist/abis/index.mjs"
        },
        "./contracts": {
            "types": "./dist/contracts/index.d.ts",
            "require": "./dist/contracts/index.cjs",
            "import": "./dist/contracts/index.mjs",
            "default": "./dist/contracts/index.mjs"
        },
        "./utils": {
            "types": "./dist/utils/index.d.ts",
            "require": "./dist/utils/index.cjs",
            "import": "./dist/utils/index.mjs",
            "default": "./dist/utils/index.mjs"
        },
        "./chains": {
            "types": "./dist/chains/index.d.ts",
            "require": "./dist/chains/index.cjs",
            "import": "./dist/chains/index.mjs",
            "default": "./dist/chains/index.mjs"
        }
    },
    "typesVersions": {
        "*": {
            "abis": [
                "dist/abis/index.d.ts"
            ],
            "contracts": [
                "dist/contracts/index.d.ts"
            ],
            "utils": [
                "dist/utils/index.d.ts"
            ],
            "chains": [
                "dist/chains/index.d.ts"
            ]
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
        "build": "tsup --config tsup.config.ts && tsc -p tsconfig.types.json",
        "build:clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\" && tsup --config tsup.config.ts && tsc -p tsconfig.types.json",
        "build:bundle": "tsup --config tsup.config.ts",
        "build:types": "tsc -p tsconfig.types.json",
        "build:check": "tsc --noEmit -p tsconfig.json",
        "test": "jest --config jest.config.cjs",
        "format": "prettier --write \"*.ts\" \"*.md\"",
        "format:check": "prettier --check \"*.ts\" \"*.md\"",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "check-trailing-spaces": "find . -type f \\( -name \"*.ts\" -o -name \"*.js\" -o -name \"*.json\" -o -name \"*.md\" \\) -exec grep -l '[[:space:]]$' {} \\; || echo 'No trailing spaces found'",
        "pack:verify": "node scripts/verify-pack.mjs",
        "pack": "npm pack",
        "prepack": "npm run build && npm run build:check",
        "postpublish": "node ../../scripts/slack-notify.js"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "viem": "catalog:"
    },
    "devDependencies": {
        "@derivation-tech/viem-ledger": "workspace:*",
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.2.2",
        "tsup": "^8.5.0",
        "typescript": "^5.9.3"
    },
    "peerDependencies": {
        "@derivation-tech/viem-ledger": "^0.1.0"
    },
    "peerDependenciesMeta": {
        "@derivation-tech/viem-ledger": {
            "optional": true
        }
    },
    "keywords": [
        "viem",
        "web3",
        "ethereum",
        "context",
        "blockchain"
    ]
}
